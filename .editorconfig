root = true

[*]
end_of_line = lf

[*.{sln,vcxproj,vcxproj.filters}]
insert_final_newline = true

[CMakeLists.txt]
insert_final_newline = true
indent_style = space
tab_width = 4

[*.{h,cpp,cc,ipp}]
insert_final_newline = true
indent_style = space
tab_width = 2
trim_trailing_whitespace = true
charset = utf-8

[*.md]
insert_final_newline = true
charset = utf-8